<Window x:Class="RIKA_AUDIO.RepairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIKA_AUDIO"
        mc:Ignorable="d"
        Title="RIKA AUDIO - DECLICKER" Width="360" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <DockPanel Margin="10,5">
                <Button Content="SELECT WAV" 
                Width="140"
                Height="35"
                Margin="0,0,10,0"
                FontSize="14"
                Background="#FF2196F3"
                Foreground="White"
                BorderBrush="Transparent"
                Cursor="Hand" Click="Button_Click"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Start time (sec):" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="StartTime"
                 Width="120"
                 Padding="5"
                 Text="0"
                 BorderThickness="1"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="End time (sec):" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="EndTime"
                 Width="120"
                 Padding="5"
                 BorderThickness="1"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Fast Ema Threshold:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="CT"
                 Width="120"
                 Padding="5"
                 BorderThickness="1"
                 Text="2"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Multiplier:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="MT"
                 Width="120"
                 Padding="5"
                 BorderThickness="1"
                 Text="10"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Low Ema Threshold:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="LT"
                 Width="120"
                 Padding="5"
                 BorderThickness="1"
                 Text="3"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Amplitude threshold:" 
                    Width="160"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Padding="0,5"/>
                <TextBox FontSize="14" 
                  x:Name="AmpThreshold"
                  Width="120"
                  Padding="5"
                  BorderThickness="1"
                  Text="3"
                  BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Phases smooth:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="PS"
                 Width="120"
                 Padding="5"
                 Text="15"
                 BorderThickness="1"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Horizontal threshold:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="HT"
                 Width="120"
                 Padding="5"
                 Text="0.25"
                 BorderThickness="1"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="Low freq compensation:" 
               Width="160"
               Margin="0,0,10,0"
               FontSize="14"
               Padding="0,5"/>
                <TextBox FontSize="14" 
                 x:Name="LFC"
                 Width="120"
                 Padding="5"
                 Text="30"
                 BorderThickness="1"
                 BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Button Content="OUTPUT PATH" 
                Width="180"
                Height="35"
                Margin="0,0,10,0"
                FontSize="14"
                Background="#FF4CAF50"
                Foreground="White"
                BorderBrush="Transparent"
                Cursor="Hand"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Button Content="PROCESS" 
                     Width="180"
                     Height="35"
                     Margin="0,0,10,0"
                     FontSize="14"
                     Background="#FF2196F3"
                     Foreground="White"
                     BorderBrush="Transparent"
                     Cursor="Hand" Click="Button_Click_1"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
