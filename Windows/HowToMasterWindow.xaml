<Window x:Class="RIKA_IMBANIKA_AUDIO.HowToMasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIKA_IMBANIKA_AUDIO"
        Loaded="WindowLoaded"
        mc:Ignorable="d"
        Title="RIKA IMBANIKA AUDIO - HOW TO MASTER" Width="335" SizeToContent="Height" Height="371">
    <Grid>
        <StackPanel>
            <DockPanel Margin="10,5">
                <Label Content="SELECT MODEL:"
                  Width="100"
                  Margin="0,0,10,0"
                  FontSize="14"
                  Padding="0,5"/>
            </DockPanel>
            <DockPanel Margin="10,5">
                <ComboBox 
                    Width="280"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Background="#FF2196F3" 
                    Foreground="Black"
                    BorderBrush="#FF2196F3"
                    x:Name="ModelsComboBox"
                    SelectedIndex="0"
                    VerticalContentAlignment="Center"
                    Padding="10,0" SelectionChanged="ModelsComboBox_SelectionChanged">

                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2196F3"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </ComboBox.Resources>

                    <ComboBoxItem>Model1</ComboBoxItem>
                    <ComboBoxItem>Model2</ComboBoxItem>
                    <ComboBoxItem>Model3</ComboBoxItem>
                </ComboBox>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="OR:"
                  Width="20"
                  Margin="0,0,10,0"
                  FontSize="14"
                  Padding="0,5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Button Content="SELECT TRACKS" 
             Width="280"
             Height="35"
             Margin="0,0,10,0"
             FontSize="14"
             Background="#FF2196F3"
             Foreground="White"
             BorderBrush="Transparent"
             Cursor="Hand" Click="Button_Click"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <ComboBox 
                    Name="TracksBox"
                    Width="280"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Background="#FF2196F3" 
                    Foreground="Black"
                    BorderBrush="#FF2196F3"
                    SelectedIndex="0"
                    VerticalContentAlignment="Center"
                    Padding="10,0" SelectionChanged="TracksBox_SelectionChanged">

                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#FF2196F3"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="           Weight:" 
                    Width="100"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Padding="0,5"/>
                <TextBox FontSize="14" 
              x:Name="Weight"
              Width="160"
              Padding="5"
              Text="100"
              BorderThickness="1"
              BorderBrush="#FFB0BEC5" TextChanged="Weight_TextChanged"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Label Content="           Model name:" 
        Width="125"
        Margin="0,0,10,0"
        FontSize="14"
        Padding="0,5"/>
                <TextBox FontSize="14" 
  x:Name="ModelName"
                         Margin="-25,0,0,0"
  Width="160"
  Padding="5"
  Text="My Great Model"
  BorderThickness="1"
  BorderBrush="#FFB0BEC5"/>
            </DockPanel>

            <DockPanel Margin="10,5">
                <Button Content="MAKE MODEL" 
                  Width="280"
                  Height="35"
                  Margin="0,0,10,0"
                  FontSize="14"
                  Background="#FF2196F3"
                  Foreground="White"
                  BorderBrush="Transparent"
                  Cursor="Hand" Click="MakeModel"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
