<Window x:Class="RIKA_AUDIO.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIKA_AUDIO"
        mc:Ignorable="d"
        Background="Black"
        Title="RIKA AUDIO - SPECTROGRAM PLAYER" Height="735" Width="1365" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Name="IMG"/>
        <StackPanel Grid.Column="1">
            <Button Content="Open"
                    Margin="15,15,15,10"
                    FontSize="24"
                    Background="#FF150065"
                    Foreground="#FFAA33FF"
                    BorderBrush="#FF100045"
                    Cursor="Hand" Click="OpenClick"/>
            <Button Content="Play"
                    Margin="15,0,15,15"
                    FontSize="24"
                    Background="#FF150065"
                    Foreground="#FFAA33FF"
                    BorderBrush="#FF100045"
                    Cursor="Hand" Click="PlayClick"/>
        </StackPanel>
    </Grid>
</Window>
