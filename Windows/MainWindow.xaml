<Window x:Class="RIKA_AUDIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIKA_AUDIO"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="RIKA AUDIO" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image
                Name="PIC"
            Margin="20,20,20,20"
                Grid.Column="0"
        />

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button Content="SPECTROGRAM PLAYER"
Width="200" 
Height="40" 
Margin="5"
FontSize="14"
Background="#FFFF7700"
Foreground="White"
BorderBrush="Transparent"
Cursor="Hand" Click="PlayerClick"/>

                <Button Content="DECLICKER"
     Width="200" 
     Height="40" 
     Margin="5"
     FontSize="14"
     Background="#FF2196F3"
     Foreground="White"
     BorderBrush="Transparent"
     Cursor="Hand" Click="Button_Click"/>

                <Button Content="STRETCHER" 
     Width="200" 
     Height="40" 
     Margin="5"
     FontSize="14"
     Background="DarkViolet"
     Foreground="White"
     BorderBrush="Transparent"
     Cursor="Hand" Click="StretcherClick"/>

                <Button Content="MUSIC MAKER" 
     Width="200" 
     Height="40" 
     Margin="5"
     FontSize="14"
     Background="#FFFF0050"
     Foreground="White"
     BorderBrush="Transparent"
     Cursor="Hand" Click="OkayBro"/>

                <Button Content="MASTERING" 
     Width="200" 
     Height="40" 
     Margin="5"
     FontSize="14"
     Background="#FF4CAF50"
     Foreground="White"
     BorderBrush="Transparent"
     Cursor="Hand" Click="Button_Click_1"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
