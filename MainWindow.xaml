<Window x:Class="Rika_Audio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rika_Audio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Declicker" 
             Width="140" 
             Height="40" 
             Margin="5"
             FontSize="14"
             Background="#FF2196F3"
             Foreground="White"
             BorderBrush="Transparent"
             Cursor="Hand" Click="Button_Click"/>

            <Button Content="Stretcher" 
             Width="140" 
             Height="40" 
             Margin="5"
             FontSize="14"
             Background="DarkViolet"
             Foreground="White"
             BorderBrush="Transparent"
             Cursor="Hand" Click="StretcherClick"/>

            <Button Content="Mastering" 
             Width="140" 
             Height="40" 
             Margin="5"
             FontSize="14"
             Background="#FF4CAF50"
             Foreground="White"
             BorderBrush="Transparent"
             Cursor="Hand" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
