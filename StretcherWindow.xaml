<Window x:Class="Rika_Audio.StretcherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rika_Audio"
        mc:Ignorable="d"
        Title="STRETCHER" Height="650" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Content="Select first track" 
                     Width="340" 
                     Height="70" 
                     Margin="5"
                     FontSize="28"
                     Background="DarkViolet"
                     Foreground="White"
                     BorderBrush="Transparent"
                     Cursor="Hand" Click="SelFirstTrack"/>
                <Button Content="Select second track"
                        Grid.Row="1"
                     Width="340" 
                     Height="70" 
                     Margin="5"
                     FontSize="28"
                     Background="DarkViolet"
                     Foreground="White"
                     BorderBrush="Transparent"
                     Cursor="Hand" Click="SelSecondTrack"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
