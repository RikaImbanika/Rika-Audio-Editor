<Window x:Class="Rika_Audio.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rika_Audio"
        mc:Ignorable="d"
        WindowState="Normal"
        Title="EditorWindow" Height="650" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            FlowDirection="LeftToRight"
            Orientation="Horizontal">

            <Button FontSize="28" 
                    Margin="0,0,-5,0" 
                    BorderThickness="5"
                    BorderBrush="Black"
                    Background="White"
                    Click="NewClick">
                <TextBlock Text="   New   "></TextBlock>
            </Button>
            
            <Button FontSize="28" 
                    Margin="0,0,-5,0" 
                    BorderThickness="5"
                    BorderBrush="Black"
                    Background="White"
                    Click="OpenClick">
                <TextBlock Text="   Open   "></TextBlock>
            </Button>
            
            <Button FontSize="28" 
        Margin="0,0,-5,0" 
        BorderThickness="5"
        BorderBrush="Black"
        Background="White"
                    Click="SaveClick">
                <TextBlock Text="   Save   "></TextBlock>
            </Button>
            
            <Button FontSize="28" 
        Margin="0,0,0,0" 
        BorderThickness="5"
        BorderBrush="Black"
        Background="White"
                    Click="SaveAssClick">
                <TextBlock Text="   Save As   "></TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Window>
